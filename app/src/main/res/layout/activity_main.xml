<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tfs.let_me_take_a_selfie.MainActivity">

    <TextView
        android:id="@+id/Counter_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TextView

        android:id="@+id/MyTextView"
        android:gravity="right"
        android:textSize="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
    <ImageView
        android:id="@+id/a_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a"
        android:clickable="true"
        android:onClick="Alphabet_click"/>

    <ImageView
        android:id="@+id/b_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/b"
        android:clickable="true"
        android:onClick="Alphabet_click"/>

    <ImageView
        android:id="@+id/c_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/c"
        android:clickable="true"
        android:onClick="Alphabet_click"/>

    <ImageView
        android:id="@+id/d_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/d"
        android:clickable="true"
        android:onClick="Alphabet_click"/>

    <ImageView
        android:id="@+id/e_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/e"
        android:clickable="true"
        android:onClick="Alphabet_click"/>

    <ImageView
        android:id="@+id/f_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/f"
        android:clickable="true"
        android:onClick="Alphabet_click"/>

    <ImageView
        android:id="@+id/g_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/g"
        android:clickable="true"
        android:onClick="Alphabet_click"/>

</FrameLayout>
